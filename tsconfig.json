{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@constants/*": ["./src/constants/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@db": ["./src/db"],
      "@enums/*": ["./src/enums/*"],
      "@errors/*": ["./src/errors/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@loaders/*": ["./src/loaders/*"],
      "@log": ["./src/loaders/log.loader"],
      "@middleware/*": ["./src/middleware/*"],
      "@models/*": ["./src/models/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@router/*": ["./src/router/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@validations/*": ["./src/validations/*"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./src/@types", "./global.d.ts"]
  },
  "include": ["src/**/*", "src/@types", "global.d.ts"],
  "exclude": ["node_modules", "src/test", "**/*.test.ts", "config", "dist"]
}
